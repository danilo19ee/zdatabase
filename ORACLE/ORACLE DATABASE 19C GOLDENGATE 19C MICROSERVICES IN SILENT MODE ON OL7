#DEPLOYING ORACLE GOLDENGATE MICROSERVICES
#AS ROOT
xhost +
su – oracle
mkdir -p /u01/app/oracle/product/ggma/ggmasm
export DISPLAY=:0.0
/u01/app/oracle/product/ggma/bin/oggca.sh

